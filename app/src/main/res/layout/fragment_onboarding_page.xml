<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingPageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/onboardImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/onboard_2" />
        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextView.Heading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Welcome to the most tastiest app" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/TextView.Medium400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:text="You know, this app is edible meaning you can eat it!" />
    </LinearLayout>
</FrameLayout>